<h1>My Tasks</h1>

<ul>
  <div class="container">
    <% @tasks.each do |task| %>
      <div class="task_container">
        <h2><%= link_to task.title, task_path(task), class:'task'%></h2>
        <p><%= task.details %></p>
        <div class= "checkbox_container">
          <%= check_box_tag task.completed, class:'checkbox' %>
        </div>
      </div>
    <% end %>
  </div>
</ul>
<%= link_to "Add a new task", new_task_path %>
